<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="page-header">
      <h1><%= @survey.title %> <br><small>Created by: <%= @survey.user.username %></small></h1>
    </div>
    <h4>Choose your answer . . .</h4>
    <form action="/tab_results" method="post" accept-charset="utf-8">
      <input type="hidden" name="<%= request_forgery_protection_token.to_s %>" value="<%= form_authenticity_token %>">
      <input type="hidden" name="survey_id" value="<%= @survey.id %>">
      <select class="form-control" name="answer_id" id="answer_id">
        <% @survey.answers.each do |answer| %>
          <option value="<%= answer.id %>"><%= answer.body %></option>
        <% end %>
      </select>
      <br>
      <input class="btn btn-success" type="submit" name="submit">
    </form>
  </div>
</div>

