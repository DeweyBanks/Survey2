<div class="row-fluid">
  <div class="col-md-4 col-md">
    <div class="page-header">
      <h1>Default Settings</h1>
    </div>
    <%= form_for @preference do |f| %>
      <div class="form-group">
        <%= f.label :company %><br>
        <%= f.text_field :company, :placeholder=>"company", :class => "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :email_from %><br />
        <%= f.email_field :email_from, :class => "form-control", autofocus: true %>
      </div>
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
